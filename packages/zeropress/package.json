{
  "name": "zeropress",
  "version": "0.0.27",
  "description": "zero config SSG framework",
  "scripts": {
    "build:comment": "echo 多入口打包，tsup不打包node_modules，--shims兼容esm与cjs的全局变量如__dirname，--no-splitting兼容shims，让shims不分割为chunk影响__dirname等路径",
    "build": "tsup ./src/node/cli.ts ./src/index.ts --shims --no-splitting --format esm --dts --external virtual:routes --external virtual:config --outDir=./lib",
    "dev": "cross-env NODE_ENV=development tsup ./src/node/cli.ts ./src/index.ts --shims --no-splitting --format esm --dts --external virtual:routes --external virtual:config --outDir=./lib --watch",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "release": "tsx scripts/release.ts",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "type": "module",
  "main": "./lib/index.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "bin": "./bin/zeropress.js",
  "files": [
    "./lib",
    "./bin",
    "index.html",
    "src/runtime",
    "src/shared",
    "src/default-theme",
    "src/shared",
    "tsconfig.json",
    "README.md",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "@iconify-json/carbon": "^1.1.36",
    "@iconify/tailwind": "^0.1.4",
    "@mdx-js/rollup": "^3.0.1",
    "@vitejs/plugin-react": "^4.2.1",
    "acorn": "^8.11.3",
    "autoprefixer": "^10.4.17",
    "classnames": "^2.5.1",
    "commander": "^11.1.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "github-slugger": "^2.0.0",
    "postcss": "^8.4.35",
    "react-helmet-async": "^2.0.5",
    "react-router-dom": "^6.22.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-pretty-code": "^0.13.0",
    "rehype-slug": "^6.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "remark-mdx-frontmatter": "^4.0.0",
    "shiki": "^1.1.2",
    "tailwindcss": "^3.4.1",
    "unified": "^11.0.4",
    "unist-util-visit": "^5.0.0",
    "vite": "^5.0.8",
    "vite-tsconfig-paths": "^4.3.1"
  },
  "devDependencies": {
    "@types/estree": "^1.0.5",
    "@types/fs-extra": "^11.0.4",
    "@types/hast": "^3.0.4",
    "@types/mdast": "^4.0.3",
    "@types/minimist": "^1.2.5",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "chalk": "^5.3.0",
    "conventional-changelog-cli": "^5.0.0",
    "cross-env": "^7.0.3",
    "enquirer": "^2.4.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "execa": "^9.3.0",
    "mdast-util-mdxjs-esm": "^2.0.1",
    "minimist": "^1.2.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^4.12.0",
    "semver": "^7.6.3",
    "serve": "^14.2.1",
    "tsup": "^8.0.1",
    "tsx": "^4.16.2"
  },
  "peerDependencies": {
    "react": ">=18.0.0 <19.0.0",
    "react-dom": ">=18.0.0 <19.0.0"
  }
}